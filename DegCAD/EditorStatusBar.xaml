<UserControl x:Class="DegCAD.EditorStatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DegCAD"
             mc:Ignorable="d" 
             Foreground="{DynamicResource fg}"
             d:DesignHeight="23" d:DesignWidth="800">
    <StatusBar Grid.Row="1" Grid.ColumnSpan="3" Foreground="{DynamicResource fg}" Background="Transparent" BorderBrush="{DynamicResource border}" BorderThickness="0,0,0,1">
        <StatusBarItem>
            <TextBlock x:Name="cmdName" Text="Command name"/>
        </StatusBarItem>
        <Separator x:Name="cmdSeparator"/>
        <StatusBarItem>
            <TextBlock x:Name="cmdHelp" Text="Command step description"/>
        </StatusBarItem>
    </StatusBar>
</UserControl>
