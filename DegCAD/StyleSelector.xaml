<UserControl x:Class="DegCAD.StyleSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DegCAD"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="350">
    <StackPanel Margin="10">
        <Label Content="Výběr stylu"/>
        <GroupBox Header="Typ čáry" Padding="10">
            <StackPanel>
                <RadioButton x:Name="lineType1"  GroupName="lineType" IsChecked="True">
                    <Line X1="0" Y1="8" X2="200" Y2="8" Stroke="Black" StrokeThickness="1" VerticalAlignment="Center"/>
                </RadioButton>
                <RadioButton x:Name="lineType2" GroupName="lineType">
                    <Line X1="0" Y1="8" X2="200" Y2="8" Stroke="Black" StrokeThickness="1" StrokeDashArray="8, 8" VerticalAlignment="Center"/>
                </RadioButton>
                <RadioButton x:Name="lineType3" GroupName="lineType">
                    <Line X1="0" Y1="8" X2="200" Y2="8" Stroke="Black" StrokeThickness="1" StrokeDashArray="8, 8, 1, 8" VerticalAlignment="Center"/>
                </RadioButton>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
